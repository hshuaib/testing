<%= form_for @event, html: {multipart: true}  do |f| %>
  <% if @event.errors.full_messages.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message if @event.errors.full_messages.first == message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
    
  <hr>  
  <br>


  <div class="field fonty formpad">
    <%= f.label :name, "اسم الفعالية" %><br>
    <%= f.text_field :name, :required=> true %>
  </div>
  <div class="field fonty formpad">
    <%= f.label :description, "وصف الفعالية" %><br>
    <%= f.text_area :description, :required=> true %>
  </div>
  <div class="field fonty formpad">
    <%= f.label :picture, "الصورة" %><br>
    <%= f.file_field :picture %>
  </div>
  <div class="field fonty formpad">
    <%= f.label :place, "المكان" %><br>
    <%= f.text_field :place, :required=> true %>
  </div>
  <br>
  
	<h4 class="field fonty formpad">
	 التاريخ والوقت 
	
	</h4>
  
  <div class="field fonty formpad">
    <%= f.label :datefrom, "من" %><br>
    <%= f.date_select :datefrom, :required=> true %>
  </div>
  <div class="field fonty formpad">
    <%= f.label :dateto, "إلى" %><br>
    <%= f.date_select :dateto, :required=> true %>
  </div>
  <div class="field fonty formpad">
    <%= f.label :time, "الوقت" %><br>
    <%= f.time_select :time, :required=> true %>
  </div>
  <div class="actions fonty formpad">
   <%= f.submit "حفظ" %> 
  </div>
<% end %>
